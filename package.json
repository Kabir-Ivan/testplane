{
  "name": "hermione",
  "version": "5.2.2",
  "description": "Tests framework based on mocha and wdio",
  "main": "lib/hermione.js",
  "types": "./typings/index.d.ts",
  "scripts": {
    "coverage": "nyc --reporter=text npm run test-unit",
    "lint": "eslint .",
    "test-unit": "_mocha test/ --config test/.mocharc.js",
    "test": "npm run test-unit && npm run lint",
    "toc": "doctoc README.md",
    "precommit": "npm run lint",
    "preversion": "npm run lint && npm test",
    "commitmsg": "commitlint -e",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/gemini-testing/hermione.git"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "keywords": [
    "hermione",
    "webdriverio",
    "mocha",
    "test"
  ],
  "bin": {
    "hermione": "./bin/hermione"
  },
  "license": "MIT",
  "dependencies": {
    "@gemini-testing/commander": "2.15.3",
    "@gemini-testing/mocha": "^9.2.3",
    "@types/mocha": "^9.0.0",
    "@wdio/types": "^7.16.11",
    "@wdio/utils": "^7.10.0",
    "bluebird": "^3.5.1",
    "chalk": "^1.1.1",
    "clear-require": "^1.0.1",
    "fs-extra": "^5.0.0",
    "gemini-configparser": "^1.3.0",
    "gemini-core": "^7.0.2",
    "inherit": "^2.2.2",
    "lodash": "^4.17.21",
    "plugins-loader": "^1.1.0",
    "urijs": "^1.19.11",
    "webdriverio": "^7.17.4",
    "worker-farm": "^1.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^12.20.28",
    "app-module-path": "^2.2.0",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "doctoc": "^2.2.0",
    "escape-string-regexp": "1.0.5",
    "eslint": "^5.16.0",
    "eslint-config-gemini-testing": "^2.8.0",
    "husky": "^0.11.4",
    "jsdom": "^16.6.0",
    "jsdom-global": "^3.0.2",
    "nyc": "^15.1.0",
    "proxyquire": "^1.7.3",
    "sinon": "^4.4.2",
    "sinon-chai": "^2.12.0",
    "standard-version": "^9.5.0"
  }
}
